<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationController</servlet-name>
        <servlet-class>controller.RegistrationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminViewSchedule</servlet-name>
        <servlet-class>controller.AdminViewSchedule</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminViewDetailSchedule</servlet-name>
        <servlet-class>controller.AdminViewDetailSchedule</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchFlightCustomer</servlet-name>
        <servlet-class>controller.SearchFlightCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookFlightCustomer</servlet-name>
        <servlet-class>controller.BookFlightCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerCart</servlet-name>
        <servlet-class>controller.CustomerCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminCheckCart</servlet-name>
        <servlet-class>controller.AdminCheckCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminAddFlight</servlet-name>
        <servlet-class>controller.AdminAddFlight</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminViewSchedule</servlet-name>
        <url-pattern>/adminviewschedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminViewDetailSchedule</servlet-name>
        <url-pattern>/adminviewdetailschedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchFlightCustomer</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookFlightCustomer</servlet-name>
        <url-pattern>/book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerCart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminCheckCart</servlet-name>
        <url-pattern>/checkcart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminAddFlight</servlet-name>
        <url-pattern>/addflight</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
